%h2 Login
%form{:action => '/login', :method => 'POST'}
  %div
    %label{:for => 'username'} Enter Username:
    %input{:type => 'text', :id => 'username', :name => 'username'}
  %div
    %label{:for => 'password'} Enter Password:
    %input{:type => 'password', :id => 'password', :name => 'password'}
  %div
    %input{:type => 'submit'}
.error=h message
